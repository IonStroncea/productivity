@page
@inject IHttpContextAccessor httpContextaccessor
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


@if (httpContextaccessor.HttpContext.Session.Get("userId") == null)
{
    <div class="">
        <div class="m-5">
            <h1 class="display-4">Welcome to ANALIZER</h1>
            <br>
            <h3> Download application <a href="">Here!</a></h3>
            <br>
            <h4>ANALIZER is a system build for helping users to monitor their computers in online mode.<br>
                This website will allow you to gain live and stored information about yours’ computers productivity.<br>
                It includes : 
                <b>
                    <ul>

                        <li>Resources usage</li>
                        <li>Running Processes</li>
                        <li>General information about computers.</li>
                    </ul> 
                </b>
                <br>
                <br>
                To start using the website you have to:
                    <ul>
                    <li>Register on website. Pss, Click <a href="/Register">Here!</a></li>
                    <li>Download our desktop application. <a href="">Here!</a></li>
                    <li>Launch our application by double clicking on exe file.</li>
                    <li>Once the application is running, it already collects and shows information about your computer.</li>
                    <li>To see it in online mode you have to log in and choose your computer’s name.</li>
                    <li>One you do that, you can open the website, log in and view your data stored on our servers, and in live mode.</li>
                    </ul>
                </h4>
            <br>
            <h5>DON'T forget this applicaton is still in developement.</h5>
        </div>
    </div>
}
else
{
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                    <img src="data:image/png;base64," alt="avatar"
                            class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">Welcome back dear @Model.dto.Name</h5>
                        <p class="text-muted mb-1">Our beloved user</p>
                        <p class="text-muted mb-4">In the deep of our hearts</p>

                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.dto.Name</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">UserName</p>
                            </div>
                            <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.dto.UserName</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4 mb-md-0">
                            <div class="card-body">
                                <p class="mb-4 h2">
                                    Computers
                                </p>
                                @foreach (var computer in Model.computers)
                                {
                                    <p class="mb-1" style="font-size: 1rem;">@computer.name</p>
                                    <br>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card mb-4 mb-md-0">
                            <div class="card-body">
                                <p class="mb-4 h2">
                                    User options:
                                </p>
                            <p class="mb-1" style="font-size: 1rem;"><a class="link-info" href="/LiveData">See online state of your machines</a></p>
                                <br>
                            <p class="mb-1" style="font-size: 1rem;"><a class="link-info" href="/Performance">See historic status of your machines</a></p>
                            <br>
                            <p class="mb-1" style="font-size: 1rem;"><a class="link-info" href="/Processes">See live processes on your machines</a></p>
                            <br>
                            <p class="mb-1" style="font-size: 1rem;"><a class="link-info" href="/MyComputers">Manage your computers</a></p>
                            <br>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
}

